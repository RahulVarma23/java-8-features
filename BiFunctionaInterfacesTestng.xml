<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
  <test name="Given the name and price of the product, write a Bifunction to create a product">
      <parameter name = "price" value="1000"/>
      <parameter name = "name" value="TV"/>
    <classes>
      <class name="com.epam.java8tests.BiFunctionalInterfacesTests">
      <methods>
        <include name="createProductUsingBiFunction" />
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test name="Given the Product and quantity of the products, write a BiFunction to calculate the cost of products. A cart is a map of product and quantity. Given the cart, calculate the cost of the cart">
    <classes>
      <class name="com.epam.java8tests.BiFunctionalInterfacesTests">
      <methods>
        <include name="calculateCostOfCart" />
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
