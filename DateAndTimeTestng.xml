<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
  <test name = "Write a Supplier to get CurrentTime in EST timezone">
      <parameter name = "timezone" value="America/New_York"/> 
    <classes>
      <class name="com.practice.java8tests.DateAndTimeTests">
      <methods>
        <include name="supplierToGetCurrentTimeInEst" />
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test name = "Write a Supplier to get Date for next Thursday">
    <classes>
      <class name="com.practice.java8tests.DateAndTimeTests">
      <methods>
        <include name="supplierToGetDateForNextThursday" />
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test name = "Write a predicate to check if the given date is yesterday date">
      <parameter name = "givenDate" value="2021-04-19"/> 
    <classes>
      <class name="com.practice.java8tests.DateAndTimeTests">
      <methods>
        <include name="checkIfGivenDateIsYesterdayDate" />
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test name = "Write a Function to calculate the age of a person given date of birth">
      <parameter name = "birthday" value="23/02/1993"/>
    <classes>
      <class name="com.practice.java8tests.DateAndTimeTests">
      <methods>
        <include name="checkIfGivenDateIsYesterdayDate" />
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
