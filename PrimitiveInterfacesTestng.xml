<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
  <test name="Write an IntPredicate to verify if the given number is a prime number">
      <parameter name = "number" value="13"/>
    <classes>
      <class name="com.epam.java8tests.PremitiveInterfacesTests">
      <methods>
        <include name="verifyIfGivenNumIsPrime" />
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test name="Write an IntConsumer to print square of the given number">
      <parameter name = "number" value="10"/>
    <classes>
      <class name="com.epam.java8tests.PremitiveInterfacesTests">
      <methods>
        <include name="printSqaureOfGivenNum" />
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test name="Write a IntSupplier to give random int below 5000">
      <parameter name = "upperbound" value="5000"/>
    <classes>
      <class name="com.epam.java8tests.PremitiveInterfacesTests">
      <methods>
        <include name="printRandomNumber" />
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
