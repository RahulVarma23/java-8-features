<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
  <test name="From the given list of the products get all the products with price>1000">
      <parameter name = "price" value="1000"/>
    <classes>
      <class name="com.practice.java8tests.StreamAPIsTests">
      <methods>
        <include name="sortProductsWithPrice" />
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test name="From the given list of the products get all the products from electronics category">
      <parameter name = "category" value="electronics"/>
    <classes>
      <class name="com.practice.java8tests.StreamAPIsTests">
      <methods>
        <include name="sortProductsWithCategory" />
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test name="From the given list of the products get all the products with price> 1000/- and from electronics category">
      <parameter name = "price" value="1000"/>
      <parameter name = "category" value="electronics"/>
    <classes>
      <class name="com.practice.java8tests.StreamAPIsTests">
      <methods>
        <include name="sortProductsWithPriceAndCategory" />
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test name="Calculate the count of all electronic products in the given list of products">
      <parameter name = "category" value="electronics"/>
    <classes>
      <class name="com.practice.java8tests.StreamAPIsTests">
      <methods>
        <include name="findCountOfProductsBasedOnCategory" />
      </methods>
      </class>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->